{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    // Modern (Svelte 5) TypeScript Configuration with Node.js 22 optimizations
    "composite": true,
    "verbatimModuleSyntax": true,
    "preserveValueImports": false,
    "ignoreDeprecations": "5.0",
    
    // Base settings optimized for Node.js 22
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2023", // Updated for Node.js 22
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$app/*": [".svelte-kit/ambient.d.ts"]
    },
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable", "WebWorker"], // Updated libraries
    "typeRoots": ["node_modules/@types", "src/types"],
    
    // Modern mode specific - strict settings for Svelte 5 + Node.js 22
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "useDefineForClassFields": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false,
    
    // Node.js 22 specific optimizations
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitOnError": false,
    "preserveConstEnums": false,
    "removeComments": false
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "src/app.html",
    "vite.config.js",
    "src/lib/**/*",
    "src/routes/**/*",
    "src/app.d.ts",
    "src/wasm_exec.d.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".svelte-kit/**/*",
    "build/**/*",
    "dist/**/*",
    "static/**/*",
    // Exclude Legacy mode files
    "src/**/*Legacy*",
    "src/**/*legacy*",
    "LegacyMode/**/*",
    "LegacyPackage*.json",
    "svelte.config.js",
    "src/wasm_exec.js"
  ]
}
