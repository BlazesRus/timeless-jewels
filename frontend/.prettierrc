{
  "bracketSameLine": false,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "printWidth": 150,
  "quoteProps": "as-needed",
  "singleQuote": true,
  "trailingComma": "none",
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "plugins": [
    "prettier-plugin-svelte"
  ],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte",
        "printWidth": 500,
        "svelteStrictMode": false,
        "svelteAllowShorthand": false,
        "svelteIndentScriptAndStyle": true,
        "htmlWhitespaceSensitivity": "ignore",
        "bracketSameLine": true,
        "singleAttributePerLine": false,
        "bracketSpacing": true,
        "proseWrap": "never",
        "svelteSortOrder": "options-scripts-markup-styles",
        "singleQuote": true,
        "useTabs": false,
        "tabWidth": 2
      }
    },
    {
      "files": [
        "*.js",
        "*.ts"
      ],
      "options": {
        "endOfLine": "lf"
      }
    }
  ]
}