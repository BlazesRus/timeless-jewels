{
  "bracketSameLine": false,
  "bracketSpacing": true,
  "endOfLine": "lf",
  "printWidth": 500,
  "quoteProps": "as-needed",
  "singleQuote": true,
  "trailingComma": "none",
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "arrowParens": "avoid",
  "plugins": ["prettier-plugin-svelte"],
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "parser": "svelte",
        "printWidth": 500,
        "svelteStrictMode": false,
        "svelteAllowShorthand": false,
        "svelteIndentScriptAndStyle": true,
        "htmlWhitespaceSensitivity": "ignore",
        "bracketSameLine": true,
        "singleAttributePerLine": false,
        "bracketSpacing": true,
        "proseWrap": "never",
        "svelteSortOrder": "options-scripts-markup-styles",
        "singleQuote": true,
        "useTabs": false,
        "tabWidth": 2
      }
    },
    {
      "files": ["*.js", "*.ts"],
      "options": {
        "endOfLine": "lf",
        "printWidth": 500,
        "bracketSameLine": true,
        "arrowParens": "avoid"
      }
    }
  ]
}
