# pnpm v10.12.1 Configuration

# Security: Only allow specified dependencies to run lifecycle scripts
# This is required in pnpm v10+ for enhanced security
only-built-dependencies=esbuild,sass,vite,@parcel/watcher,@sveltejs/kit,svelte-preprocess

# Hoisting configuration - pnpm v10+ defaults to empty array
# Explicitly configure common tools that need to be hoisted
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=*typescript*

# Windows virtual store directory length limitation (reduced to 60 in v10+)
virtual-store-dir-max-length=60

# Package manager version management (enabled by default in v10+)
manage-package-manager-versions=true

# Lockfile settings for compatibility
prefer-frozen-lockfile=false

# Enhanced security settings for v10.12.1
strict-peer-dependencies=false
auto-install-peers=true
