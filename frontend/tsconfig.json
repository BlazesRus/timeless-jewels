{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    // Default Modern (Svelte 5) TypeScript Configuration
    "composite": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "typeRoots": ["node_modules/@types", "src/types"],
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": false
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "src/app.html",
    "vite.config.js",
    "src/lib/**/*",
    "src/routes/**/*",
    "src/app.d.ts",
    "src/wasm_exec.d.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".svelte-kit/**/*",
    "build/**/*",
    "dist/**/*",
    "static/**/*",
    "src/**/Legacy*.svelte",
    "src/**/*Legacy*.svelte",
    "src/**/Legacy*.ts",
    "src/**/*Legacy*.ts",
    "src/**/Legacy*.js",
    "src/**/*Legacy*.js",
    "src/**/legacy*",
    "src/**/*legacy*",
    "LegacyMode/**/*",
    "LegacyPackage*.json",
    "svelte.config.js",
    "src/wasm_exec.js"
  ]
}
