[
    {
        "key": "ctrl+shift+`",
        "command": "workbench.action.terminal.focus",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+shift+c",
        "command": "workbench.view.extension.github-copilot-chat",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+enter",
        "command": "github.copilot.terminal.suggest",
        "when": "terminalFocus"
    },
    {
        "key": "escape",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus && !terminalInputFocus"
    },
    {
        "key": "ctrl+shift+p",
        "command": "workbench.action.showCommands",
        "when": "terminalFocus"
    }
]
